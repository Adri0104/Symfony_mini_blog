{% extends "base.html.twig" %}

{% block body %}
    <h1>Connexion</h1>
    <form action="{{path('security_login')}}" method="POST">
        <div class="form-group">
            <input type="text" placeholder="Email" required class="form-control" name="_username">
        </div>
        <div class="form-group">
            <input type="password" placeholder="Motc de passe" required class="form-control" name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}